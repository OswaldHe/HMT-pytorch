{
  "dataset_reader": {
    "class_name": "dp:T5DatasetReader",
    "name": "glue_sst2_v002",
    "train": "train",
    "valid": "validation",
    "test": "test"
  },
  "dataset_iterator": {
    "class_name": "dp:T5DatasetIterator",
    "shuffle": true,
    "seed": 42
  },
  "chainer": {
    "in": ["x"],
    "in_y": ["y"],
    "pipe": [
      {
        "class_name": "dp:TorchTransformersPreprocessor",
        "id": "preprocessor",
        "vocab_file": "t5-base",
        "do_lower_case": false,
        "max_seq_length": 256,
        "reduce_pad": true,
        "in": ["x"],
        "out": ["x_features"]
      },
      {
        "in": ["y"],
        "out": ["y_features"],
        "ref": "preprocessor"
      },
      {
        "class_name": "dp:T5Text2TextModel",
        "pretrained_model": "{PRETRAINED_PATH}",
        "t5_configs_path": "/home/kuratov/t5-experiments/",
        "check_commit": false,
        "max_generation_len": 10,
        "save_path": "{MODEL_PATH}/model",
        "load_path": "{MODEL_PATH}/model",
        "optimizer": "AdamW",
        "optimizer_parameters": {
          "lr": 2e-05
        },
        "learning_rate_drop_patience": 5,
        "learning_rate_drop_div": 2.0,
        "in": ["x_features"],
        "in_y": ["y_features"],
        "out": ["y_pred"]
      },
      {
        "in": ["y_pred"],
        "out": ["y_pred_id"],
        "class_name": "dp:T5Text2TextPostprocessor",
        "task": "glue_sst2_v002",
        "id": "postprocessor"
      },
      {
        "in": ["y"],
        "out": ["y_id"],
        "ref": "postprocessor"
      }
    ],
    "out": ["y_pred", "y_pred_id"]
  },
  "train": {
    "batch_size": 32,
    "metrics": [
      {
        "name": "accuracy",
        "inputs": ["y_id", "y_pred_id"]
      }
    ],
    "validation_patience": 15,
    "val_every_n_batches": 250,
    "log_every_n_batches": 100,
    "show_examples": false,
    "validate_first": false,
    "evaluation_targets": ["train", "valid"],
    "class_name": "torch_trainer",
    "tensorboard_log_dir": "{MODEL_PATH}/",
    "pytest_max_batches": 2
  },
  "metadata": {
    "imports": ["dp"],
    "variables": {
      "ROOT_PATH": "~/.deeppavlov",
      "DOWNLOADS_PATH": "{ROOT_PATH}/downloads",
      "PRETRAINED_PATH": "./runs/base_wiki_bs_128/",
      "MODEL_PATH": "{PRETRAINED_PATH}/glue/sst2/bs_32/"
    },
    "requirements": [
      "{DEEPPAVLOV_PATH}/requirements/pytorch.txt",
      "{DEEPPAVLOV_PATH}/requirements/transformers.txt"
    ]
  }
}
