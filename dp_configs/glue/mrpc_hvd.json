{
  "dataset_reader": {
    "class_name": "dp:T5DatasetReader",
    "name": "{TASK}",
    "train": "train",
    "valid": "validation",
    "test": "test",
    "shuffle": true
  },
  "dataset_iterator": {
    "class_name": "dp:T5TFDatasetIterator"
  },
  "chainer": {
    "in": ["x"],
    "in_y": ["y"],
    "pipe": [
      {
        "class_name": "dp:TorchTransformersPreprocessor",
        "id": "preprocessor",
        "vocab_file": "t5-base",
        "do_lower_case": false,
        "max_seq_length": 256,
        "reduce_pad": true,
        "in": ["x"],
        "out": ["x_features"]
      },
      {
        "in": ["y"],
        "out": ["y_features"],
        "ref": "preprocessor"
      },
      {
        "class_name": "dp:T5Text2TextModel",
        "pretrained_model": "{PRETRAINED_PATH}",
        "t5_configs_path": "/home/kuratov/t5-experiments/",
        "check_commit": false,
        "max_generation_len": 10,
        "save_path": "{MODEL_PATH}/model",
        "load_path": "{MODEL_PATH}/model",
        "optimizer": "Adafactor",
        "optimizer_parameters": {
          "lr": 5e-05,
          "weight_decay": 1e-03,
          "scale_parameter": false,
          "relative_step": false,
          "warmup_init": false
        },
        "learning_rate_drop_patience": 30,
        "learning_rate_drop_div": 2.0,
        "in": ["x_features"],
        "in_y": ["y_features"],
        "out": ["y_pred"]
      },
      {
        "in": ["y_pred"],
        "out": ["y_pred_id"],
        "class_name": "dp:T5Text2TextPostprocessor",
        "task": "{TASK}",
        "id": "postprocessor"
      },
      {
        "in": ["y"],
        "out": ["y_id"],
        "ref": "postprocessor"
      }
    ],
    "out": ["y_pred", "y_pred_id"]
  },
  "train": {
    "batch_size": 16,
    "metrics": [
      {
        "name": "f1_score_with_invalid",
        "inputs": ["y_id", "y_pred_id"]
      },
      {
        "name": "accuracy",
        "inputs": ["y_id", "y_pred_id"]
      }
    ],
    "validation_patience": 75,
    "val_every_n_batches": 50,
    "log_every_n_batches": 50,
    "show_examples": false,
    "validate_first": false,
    "evaluation_targets": ["valid"],
    "class_name": "dp_hvd_trainer:HvdTorchNNTrainer",
    "tensorboard_log_dir": "{MODEL_PATH}/",
    "pytest_max_batches": 2
  },
  "metadata": {
    "imports": ["dp"],
    "variables": {
      "ROOT_PATH": "~/.deeppavlov",
      "DOWNLOADS_PATH": "{ROOT_PATH}/downloads",
      "PRETRAINED_PATH": "./runs/small_wiki_bs_128/",
      "MODEL_PATH": "{PRETRAINED_PATH}/glue/mrpc/bs_32_adafactor_hvd/run_1",
      "TASK": "glue_mrpc_v002"
    },
    "requirements": [
      "{DEEPPAVLOV_PATH}/requirements/pytorch.txt",
      "{DEEPPAVLOV_PATH}/requirements/transformers.txt"
    ]
  }
}
